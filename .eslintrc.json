{
  "root": true, //declares as root ESLint file
  "extends":[
    "eslint:recommended",
    "plugin:import/errors",
    "plugin:import/warnings"
  ],
  "parseOptions":{
    "ecmaVersion": 8,
    "sourceType": "module"
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  },

  "rules":{
    "no-console": 1
  }
}
